<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinateLayout"
    android:background="#ffe5d7"
    tools:context="edu.wm.cs.cs301.amazebyyunwoonoh.ui.HungryActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">



    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/hungry"
        android:id="@+id/imageView" />

    <Button
        android:text="Play Again"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button12"
        app:layout_anchor="@+id/include4"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_marginTop="500dp"
        android:layout_gravity="bottom|center_horizontal" />





    <include layout="@layout/content_hungry"
        android:id="@+id/include4" />

    <TextView
        android:text="Feed me Human"
        android:layout_width="523dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="40dp"
        android:textAllCaps="true"
        android:textColor="#F00000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView4" />

</android.support.design.widget.CoordinatorLayout>
